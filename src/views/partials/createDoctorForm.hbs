 <div class="row mt-2">
    <div class="form-group col-md-6">
        <label for="firstname" class="form-label mt-3">Nombre(s):</label>
        <input
            type="text"
            class="form-control"
            name="firstname"
            id="firstname"
            value="{{data.firstname}}"
        />
        </div>
        <div class="form-group col-md-6">
        <label for="lastname" class="form-label mt-3">Apellido(s):</label>
        <input
            type="text"
            class="form-control"
            name="lastname"
            id="lastname"
            value="{{data.lastname}}"
        />
        </div>
</div>
<div class="row">
    <div class="form-group col-md-6">
        <label
            for="email"
            class="form-label mt-3"
        >Correo:</label>
        <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            value="{{data.email}}"
        />
        </div>
        <div class="form-group col-md-6">
        <label
            for="password"
            class="form-label mt-3"
        >Contraseña:</label>
        <input
            type="password"
            class="form-control"
            name="password"
            id="password"
            autocomplete="off"
        />
        </div>
</div>
<div class="row">
    <div class="form-group col-md-6">
        <label
            for="phoneNumber"
            class="form-label mt-3"
        >Teléfono:</label>
        <input
            type="tel"
            class="form-control"
            name="phoneNumber"
            id="phoneNumber"
            value="{{data.phoneNumber}}"
        />
        </div>
    <div class="form-group col-md-6">
        <label
            for="cellphone"
            class="form-label mt-3"
        >Celular:</label>
        <input
            type="tel"
            class="form-control"
            name="cellphone"
            id="cellphone"
            value="{{data.cellphone}}"
        />
        </div>
</div>
<div class="row">
    <div class="form-group col-md-4">
        <label for="category" class="form-label mt-3">Selecciona una categoría</label>
        <select 
                class="form-select" 
                id="category" 
                name="category"
                {{#isEqual user.role 'DOCTOR_ROLE'}}
                disabled
                {{/isEqual}}
                >
            {{#each data.categories}}
                <option value={{category}}>{{category}}</option>
            {{/each}}

            {{#if data.category}}
                <option value={{data.category}}>{{data.category}}</option>
            {{/if}}
            

        </select>
    </div>
    <fieldset class="form-group col-md-4 text-center">
        <p class="m-3">Estado:</p>
        <div class="d-flex justify-content-center">
            <div class="form-check me-5">
                <input 
                    class="form-check-input" 
                    type="radio" 
                    name="active" 
                    id="optionsRadios1" 
                    value="true" 
                    checked=""
                    {{#isEqual user.role 'DOCTOR_ROLE'}}
                        disabled
                    {{/isEqual}}
                    >
                <label class="form-check-label" for="optionsRadios1">
                    Activo
                </label>
        </div>
        <div class="form-check">
            <input 
                    class="form-check-input" 
                    type="radio" 
                    name="active" 
                    id="optionsRadios2" 
                    value="false"
                    {{#isEqual user.role 'DOCTOR_ROLE'}}
                    disabled
                    {{/isEqual}}>
            <label class="form-check-label" for="optionsRadios2">
                Inactivo
            </label>
        </div>
        </fieldset>
        <div class="form-group col-md-4">
        <label for="role" class="form-label mt-3">Selecciona un rol</label>
        <select 
                class="form-select" 
                id="role" 
                name="role"
                {{#isEqual user.role 'DOCTOR_ROLE'}}
                disabled
                {{/isEqual}}
                >
                <option value="DOCTOR_ROLE">Doctor</option>
        </select>
        </div>
</div>