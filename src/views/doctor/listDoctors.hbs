                <td>{{phoneNumber}}</td>
                <td>{{consultationPrice}}</td>
                <td>{{category}}</td>
                <td>{{active}}</td>
                <td>
                  <a href="doctor/{{_id}}"  class="btn btn-success"><i class="fa-solid fa-pen"></i></a>
                  <a href="" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
