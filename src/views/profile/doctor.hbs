<section style="background-color: #f8f8f8;" class="container fade-in">
    <div class="row p-3">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            {{#if user.image}}
              <img src={{user.image}} alt="avatar"
                class="rounded-circle img-profile">
            {{else}}
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                class="rounded-circle img-profile">
            {{/if}}
            
            <h5 class="my-3">{{user.firstname}}</h5>
            <p class="text-muted mb-1">{{user.adress}}</p>
            <p class="text-muted mb-4">{{user._id}}</p>
            <div class="d-flex justify-content-center mb-2">
              {{#if user.category}}
                <a href="doctor/{{user._id}}" class="btn btn-primary">Editar Perfil</a>
                {{else}}
                <a href="/user/profile/update/{{user._id}}" class="btn btn-primary">Editar Perfil</a>
              {{/if}}
            </div>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-3">
            <div>
              {{>createAppointment}}
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Nombre(s)</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.firstname}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Apellido(s)</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.lastname}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Correo</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.email}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Teléfono</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.phoneNumber}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Celular</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.cellphone}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Dirección</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.adress}}</p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body">

                <li class="list-group-item list-group-item-secondary d-flex justify-content-between align-items-center p-3">
                  <i class="fas fa-globe fa-lg text-warning"></i>
                  <p class="mb-0">Citas confirmadas: {{confirmedTotal}}</p>
                </li>
                {{#each confirmed}}
                  <div class="border mt-2">
                      <li class="list-group-item list-group-item-info">Paciente: {{client.lastname}}, {{client.firstname}}</li>
                      <li class="list-group-item">Fecha: {{date}} - {{appointmentTime}}</li>
                  </div>
                {{/each}}
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body">
                <ul class="list-group">
                  <li class="list-group-item list-group-item-secondary d-flex justify-content-between align-items-center p-3 mb-2">
                    <i class="fas fa-globe fa-lg text-warning"></i>
                    <p class="mb-0">Citas pendientes: {{appointmentTotal}}</p>
                  </li>
                  {{#each appointment}}
                  <div class="border mt-2">
                      <li class="list-group-item list-group-item-warning">Paciente: {{client.lastname}}, {{client.firstname}}</li>
                      <li class="list-group-item">Fecha: {{date}} - {{appointmentTime}}</li>
                  </div>
                  {{/each}}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>   
</section>