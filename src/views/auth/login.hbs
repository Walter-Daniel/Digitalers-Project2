<!-- CUERPO DEL LOGIN COMPLETO -->
<div class="container-login rounded shadow fade-in">
  <div>
    <div class="row align-items-stretch">
    <div class="col container-form p-5 rounded">
      <div class="row justify-content-md-end">
        <img src="/img/logo.png" alt="Logo clínica del sol"  style="width: 15rem;">
      </div>
      <h2 class="title-section has-border my-5">Bienvenido</h2>
      <form action="/auth/login" method="POST">
        <div class="mb-4">
          <label for="email" class="form-label"><i class="far fa-envelope ikono"></i> Correo Electrónico</label>
          <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            value="{{data.email}}"
        />
        </div>
        <div class="mb-4">
          <label for="password" class="form-label"><i class="fas fa-key ikono"></i>Contraseña</label>
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
          />
        </div>
        <div class="d-grid">
          <button type="submit" class="btn bg-warning bg-gradient btn-round" style="padding: 10px; font-weight: bold;">
            Iniciar Sesión
          </button>
        </div>
        <div class="mt-3 mb-5" style="color: white;">
          <span>No tienes cuenta? <a href="/auth/register">Regístrate</a> </span> <br />
        </div>
      </form>
      <!-- Login con redes sociales -->
    </div>
    <div
      class="col bg-login d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded"
    ></div>
  </div>
  </div>
</div>     