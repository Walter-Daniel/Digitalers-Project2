<section class="vh-100 w-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12 col-lg-6 text-black">

        <div class="row justify-content-md-end p-3 mt-2" >
            <img src="/img/logo.png" 
                  alt="Logo clínica del sol" 
                  style="width: 15rem; background-color: #2c3e50; padding: 1rem 2rem; border-radius: 3rem;"
                  class="shadow">
        </div>
        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <form action="/auth/login" method="POST" style="width: 100%">

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Iniciar Sesión</h3>

            <div class="form-outline mb-4">
               <label for="email" class="form-label"> Correo electrónico:</label>
               <input
                  type="email"
                  class="form-control"
                  name="email"
                  id="email"
                  value="{{data.email}}"
                />
            </div>

            <div class="form-outline mb-4">
              <label for="password" class="form-label">Contraseña:</label>
              <input
                type="password"
                class="form-control"
                name="password"
                id="password"
              />
            </div>

            <div class="pt-1 mb-4 d-grid">
              <button type="submit" class="btn bg-warning bg-gradient btn-round shadow" style="padding: 10px; font-weight: bold;">
                Iniciar Sesión
              </button>
            </div>

            <span>No tienes cuenta? <a href="/auth/register">Regístrate</a> </span> <br />

          </form>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-md-block">
        <img src="/img/login.jpg"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>